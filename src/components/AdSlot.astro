---
// Ten komponent zarządza wyświetlaniem odpowiedniej reklamy.
// Przyjmuje jeden parametr `id`, np. "home-1" lub "calculator-1".
// Ustaw showAds na `false`, aby ukryć wszystkie placeholdery.
// Ustaw showAds na `true`, aby je pokazać i wstawić kody AdSense.
const showAds = false;
const { id } = Astro.props;
---

{showAds && (
    <div class="my-8">
        {/* Zestaw reklam dla strony głównej */}
        {id === 'home-1' && (
            <div class="ad-placeholder">Reklama Home #1 (np. 728x90)</div>
        )}
        {id === 'home-2' && (
            <div class="ad-placeholder">Reklama Home #2 (np. natywna)</div>
        )}
        {id === 'home-3' && (
            <div class="ad-placeholder">Reklama Home #3 (dolny baner)</div>
        )}

        {/* Zestaw reklam dla wszystkich podstron z kalkulatorami */}
        {id === 'calculator-1' && (
            <div class="ad-placeholder">Reklama Kalkulator #1 (górny baner)</div>
        )}
        {id === 'calculator-2' && (
            <div class="ad-placeholder">Reklama Kalkulator #2 (w treści)</div>
        )}
        {id === 'calculator-3' && (
            <div class="ad-placeholder">Reklama Kalkulator #3 (dolny baner)</div>
        )}
    </div>
)}
